# Habilitar la compresión de archivos para mejorar la velocidad
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript
</IfModule>
# Habilitar el almacenamiento en caché del navegador
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>
# Forzar HTTPS (asegúrate de tener SSL activo)
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
# Redirección de www a dominio sin www (ajustar si prefieres lo contrario)
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
# Protección contra exploración de directorios
Options -Indexes
# Bloquear acceso a archivos sensibles
<FilesMatch "(^\.htaccess|\.htpasswd|config\.php|database\.yml|.env)$">
    Require all denied
</FilesMatch>
# Protección contra hotlinking de imágenes
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https://(www\.)?crtemsa\.com [NC]
    RewriteRule \.(jpg|jpeg|png|gif|bmp|svg)$ - [F,NC]
</IfModule>
# Protección contra inyección de scripts maliciosos
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C)script(.*)(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-F]{2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-F]{2})
    RewriteRule ^(.*)$ - [F,L]
</IfModule>
# Configuración de errores personalizados
ErrorDocument 404 /index.html
ErrorDocument 403 /403.html
ErrorDocument 500 /500.html
